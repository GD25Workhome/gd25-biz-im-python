# FastAPI 后端脚手架 - 环境变量配置示例
# 复制此文件为 .env 并填写实际配置值

# ==================== 应用配置 ====================
APP_NAME=gd25-arch-backend
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ==================== 数据库配置 ====================
# PostgreSQL 示例
DATABASE_URL=postgresql://postgres:sxl_pwd_123@localhost:5433/doctor_agent_db?sslmode=disable

# MySQL 示例（如果使用 MySQL，取消注释并修改）
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/dbname

# ==================== Redis 配置（可选）====================
# REDIS_URL=redis://localhost:6379/0

# ==================== Celery 配置（可选）====================
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2
# RabbitMQ 配置（Celery Broker）
CELERY_BROKER_URL=amqp://admin:admin123@localhost:5672/

# Result Backend（可选，可以使用 Redis 或 RabbitMQ）
# 如果使用 Redis：
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# 如果使用 RabbitMQ：
# CELERY_RESULT_BACKEND=rpc://

# ==================== FLOWER 配置（可选）====================
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:admin123
FLOWER_URL_PREFIX=/flower

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==================== CORS 配置 ====================
# 多个源用逗号分隔
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== 服务器配置 ====================
HOST=0.0.0.0
PORT=8000

# ==================== AI 配置 ====================
# AI 服务提供商：openai, anthropic, deepseek
AI_PROVIDER=openai
# AI API 密钥（必需）
AI_API_KEY=your-api-key-here
# AI API 基础 URL（可选，某些提供商需要自定义 URL）
# AI_BASE_URL=https://api.openai.com/v1
# AI 模型名称
AI_MODEL=gpt-3.5-turbo
# AI 温度参数（0-2，控制回复的随机性）
AI_TEMPERATURE=0.7
# AI 最大 token 数
AI_MAX_TOKENS=1000
